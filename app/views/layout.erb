  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Recipes</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper">
      <nav class="main-navigation">
      
        <a href="/"><img src="/images/site_logo_2.png" class="site-logo"></a>
      
        <% if !logged_in? %>
          <a href="/signup" class="nav-item">Signup</a>  |  
          <a href="/login" class="nav-item">Login</a>    |
        <% else %>
          <span>Hello <%= current_user.username %>! </span> |
          <a href="/categories"> Recipe Categories </a> |
          <a href="/recipes/new">New Recipe</a> |
          <a href="/logout" class="nav-item"> Logout </a>  |
        <% end %>

        

      </nav>
      <header><img src="/images/persian_kebab.jpg" class="page-header-image"></header>

      <% flash.keys.each do |type| %>
        <div data-alert class="flash <%= type %> alert-box radius">
          <%= flash[type] %>
        </div>
      <% end %>

        <%= yield %>
      

      <footer class="branding">
        <small>&copy; 2020 <strong>Recipes</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
