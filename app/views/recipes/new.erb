<h1>Create a new Recipe</h1>

<form action="/recipes" method="POST">
  <p>
    <label>Recipe Name:</label>
    <input type="text" name="recipe[name]">
  </p>

  <p>
    <label>Ingredients:</label>
    <input type="text" name="recipe[ingredients]">
  </p>

  <p>
    <label>Cook Time:</label>
    <input type="text" name="recipe[cooktime]">
  </p>

    <input type="hidden" name="recipe[user_id]" value="<%= current_user.id %>" >
  <p>
    <label>Description:</label><br>
    <textarea name="recipe[description]" rows="10" cols="110"></textarea>
  </p>

  <p>Select an existing category or create a new one below.</p>

  <h3>Existing Categories</h3>
  <% @categories.each do |category| %>
    <input type="radio" name="recipe[category_id]" value="<%= category.id %>"><%= category.name %><br>
  <% end %>
  <br>

  <h3>New Category</h3>
  <label>Category Name: </label>
  <br>
  <input type="text" name="category[name]"></input>
  <br><br>

  <input type="submit" value="Create Recipe">
</form>
